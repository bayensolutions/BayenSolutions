            <tabs>
                <Tab text="Bazeni">
                    <graphic>

                    </graphic>
                    <content>
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                            <top>
                                <Button fx:id="addPoolButton" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#addPool" prefHeight="50.0" prefWidth="200.0"
