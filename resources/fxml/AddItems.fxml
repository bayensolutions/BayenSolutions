                                <Insets left="30.0" right="30.0"/>
                            </opaqueInsets>
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" styleClass="search-button"
                                stylesheets="@style.css" text="Pretraga" textAlignment="CENTER" textFill="WHITE">
