                <VBox prefHeight="430.0" prefWidth="240.0" spacing="10.0" style="-fx-background-color: #828282;">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0"/>
                    </VBox.margin>
                    <children>
                        <HBox prefHeight="40.0" prefWidth="240.0">
                            <children>
