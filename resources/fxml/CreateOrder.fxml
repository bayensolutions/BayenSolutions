<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bayensolutions.controllers.CreateOrderController">
   <top>
      <Text fill="#404040" strokeType="OUTSIDE" strokeWidth="0.0" text="Informacije o narudÅ¾bi" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="Georgia Bold Italic" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Klijent" textAlignment="CENTER">
                     <font>
                        <Font name="Georgia Bold Italic" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="clientCB" prefHeight="30.0" prefWidth="180.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Adresa" textAlignment="CENTER">
                     <font>
                        <Font name="Georgia Bold Italic" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="addressTF" prefHeight="30.0" prefWidth="180.0" promptText="Adresa">
                     <font>
                        <Font name="Georgia" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Pane prefHeight="30.0" prefWidth="100.0" />
                  <Button fx:id="addItemsButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#addItems" prefHeight="30.0" prefWidth="180.0" text="Dodaj stavke" textAlignment="CENTER">
                     <font>
                        <Font name="Georgia Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
